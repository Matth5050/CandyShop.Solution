@{
  Layout = "_Layout";
}

@using CandyShop.Models;

<h1> Bakery Flavors</h1>

@if (@Model.Count == 0)
{
  <h3> No Flavors!</h3>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<p>@Html.ActionLink("New Flavor","Create","Flavor")</p>