  <nav id="navbar" class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
      <a id="brand" class="navbar-brand" href="/">Pierre's Sweets & Treats</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a id="navLink" class="nav-link" href="/Treat">Treats</a>
          </li>
          <li class="nav-item">
            <a id="navLink" class="nav-link" href="/Flavor">Flavors</a>
          </li>
          <li class="nav-item">
            @if (User.Identity.IsAuthenticated)
            {
                <p>Hello @Html.ActionLink(@User.Identity.Name, "Index", "Account")</p>
